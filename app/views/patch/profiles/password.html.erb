<% if current_user.valid? %>
<div class="container" style="margin-top:30px">
<div class="col-md-4 col-md-offset-2">
    <h4 style="text-align:center;font-weight:bold">修改密码</h4>
    <%= form_for Ecstore::Account.new, :url => change_pwd_auth_bbmall_index_path do |f| %>
    <%= f.label :old_pwd, '原密码', :class=>'form-inline' %>
    <%= f.password_field :old_pwd %>
    <%= f.label :new_pwd, '新密码', :class=>'form-inline' %>
    <%= f.password_field :new_pwd %>
    <%= f.submit "提交", :class=>'btn btn-success', :style=>'margin-top:5px' %>
    <% end %>
  </div>
</div>
<% else %>
<h4 style="text-align:center;">请您先<%= link_to '登录', login_path %>!</h4>
<% end %>