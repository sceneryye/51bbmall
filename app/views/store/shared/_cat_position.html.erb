<div class="block block-breadcrumbs">
  <ul>
    <li class="home">
      <a href="/"><i class="fa fa-home"></i></a>
      <span></span>
    </li>
    <%@cat.cat_paths.each_with_index do |cat,index|%>
        <%if index != @cat.cat_paths.size - 1%>
          <li>
            <%=link_to cat.cat_name,"#{cat_path(cat)}?gtype=#{params[:gtype]}" if cat%>
            <span></span>
          </li>
        <%else%>
           <li class="active">
            <%=cat.cat_name if cat%>
          </li>
        <%end%>
    <%end%>
  </ul>
</div>

