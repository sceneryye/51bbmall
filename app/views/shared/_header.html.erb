<!-- header -->
<header id="header">
    <div class="container">
        <!-- main header -->
        <div class="row  hidden-xs">
            <div class="main-header">
                <div class="row">
                    <div class="col-sm-12 col-md-2 col-lg-2">
                        <div class="logo">
                            <a href="/"><img src="/img/logo.png" alt="Logo"></a>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-7 hidden-xs">
                        <div class="advanced-search box-radius">
                            <form class="form-inline" action="/search">
                                <div class="form-group search-category">
                                    <select id="category-select" class="search-category-select" style="display: none;">
                                        <option value="1">所有分类</option>
                                    </select>

                                    <!--        <span class="ui-selectmenu-button ui-widget ui-state-default ui-corner-all" tabindex="0" id="category-select-button" role="combobox" aria-expanded="false" aria-autocomplete="list" aria-owns="category-select-menu" aria-haspopup="true" aria-activedescendant="ui-id-1" aria-labelledby="ui-id-1" aria-disabled="false" style="width: 141px;">
                                    <span class="ui-icon ui-icon-triangle-1-s"></span>
                                    <span class="ui-selectmenu-text">所有分类</span>
                                </span> -->
                            </div>
                            <div class="form-group search-input">
                                <input type="text" placeholder="请输入您要查询的商品" id="search_input" name="q">
                            </div>
                            <button type="submit" class="btn-search"><i class="fa fa-search"></i></button>
                        </form>

                    </div>
                </div>
                <div class="col-sm-7 col-md-4 col-lg-3">
                    <div class="wrap-block-cl">
                        <div class="inner-cl box-radius">
                            <%if @user%>
                            <div class="dropdown user-info">
                              <a data-toggle="dropdown" role="button"><i class="fa fa-user"></i></a>
                              <ul class="dropdown-menu">
                                <li><a href="/member"><i class="fa fa-user"></i> 个人中心</a></li>
                                <li><a href="/member/favorites"><i class="fa fa-heart-o"></i>收藏夹</a></li>
                                <li><a href="/cart"><i class="fa fa-arrow-circle-right"></i> 结账</a></li>
                                <li><a href="/member/orders"><i class="fa fa-list"></i> 订单</a></li>
                                <li><a href="/logout"><i class="fa fa-sign-in"></i> 退出</a></li>
                            </ul>
                        </div>
                        <div class="language">
                            <%=@user.mobile%>
                        </div>
                        <div class="currency cart-mobile block-wrap-cart" style="display:none;">
                            <div class="iner-block-cart box-radius">
                                <a href="/cart">
                                    <span class="total"><span class="mini-cart-total-price"><%= @cart_total %></span></span>
                                </a>
                            </div>
                            <div class="block-mini-cart">
                                <div class="mini-cart-content">
                                    <h5 class="mini-cart-head"><span class="mini-cart-quantity"><%= @cart_total_quantity %></span> 件商品 </h5>
                                    <div class="mini-cart-list">
                                        <% if @cart_total_quantity > 0 %>
                                        <div class="mini-cart-list">
                                            <ul>
                                                <% @line_items.each do |l| %>
                                                <li class="product-info">
                                                    <div class="p-left">
                                                        <a href="#" class="remove_link"></a>
                                                        <a href="#">
                                                            <img class="img-responsive" src=<%= l.good.medium_pic %> alt="Product">
                                                        </a>
                                                    </div>
                                                    <div class="p-right">
                                                        <p class="p-name"><%= l.product.name %></p>
                                                        <p class="product-price"><%= l.product.price %></p>
                                                        <p>数量: <span class="mini-cart-product-quantity"><%= l.quantity %></span></p>
                                                    </div>
                                                </li>
                                                <% end %>
                                            </ul>
                                        </div>
                                        <div class="toal-cart">
                                            <span>总共</span>
                                            <span class="toal-price pull-right"><span class="mini-cart-total-price"><%= @cart_total %></span></span>
                                        </div>
                                        <div class="cart-buttons">
                                            <a href="/orders/new" class="button-radius btn-check-out">下单<span class="icon"></span></a>
                                        </div>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%else%>
                        <div class="language">
                            <a href="/login"><i class="fa fa-sign-in"></i> 登录/注册</a>
                        </div>
                        <%end%>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<!-- ./main header -->
</div>
<div class="container">
    <div class="row">
        <!-- main menu-->
        <div class="main-menu">
            <div class="container">
