                                    <ul class="nav navbar-nav navbar-right">
                                        <li>
                                            <div class="block-wrap-cart">
                                                <div class="iner-block-cart">
                                                    <a href="/cart">
                                                        <span class="total"><span class="mini-cart-total-price"><%= @cart_total %></span></span>
                                                    </a>
                                                </div>
                                                <div class="block-mini-cart">
                                                    <div class="mini-cart-content">
                                                        <h5 class="mini-cart-head"><span class="mini-cart-quantity"><%= @cart_total_quantity %></span> 件商品 </h5>
                                                        <% if @cart_total_quantity > 0 %>
                                                        <div class="mini-cart-list">
                                                            <ul>
                                                                <% @line_items.each do |l| %>
                                                                <li class="product-info">
                                                                    <div class="p-left">
                                                                        <a href="#" class="remove_link"></a>
                                                                        <a href="#">
                                                                            <img class="img-responsive" src=<%= l.good.medium_pic %> alt="Product">
                                                                        </a>
                                                                    </div>
                                                                    <div class="p-right">
                                                                        <p class="p-name"><%= l.product.name %></p>
                                                                        <p class="product-price"><%= l.product.price %></p>
                                                                        <p>数量: <span class="mini-cart-product-quantity"><%= l.quantity %></span></p>
                                                                    </div>
                                                                </li>
                                                                <% end %>
                                                            </ul>
                                                        </div>
                                                        <div class="toal-cart">
                                                            <span>总共</span>
                                                            <span class="toal-price pull-right"><span class="mini-cart-total-price"><%= @cart_total %></span></span>
                                                        </div>
                                                        <div class="cart-buttons">
                                                            <a href="/orders/new" class="button-radius btn-check-out">下单<span class="icon"></span></a>
                                                        </div>
                                                        <% end %>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div><!--/.nav-collapse -->
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- ./main menu-->
            <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>" style="margin-top:20px;width:100%;padding:10px 15px;"><%= message %></div>
            <% end %>
        </div>
    </div>

</header>
<!-- ./header -->